{
  "name": "utils-blockchain",
  "version": "1.0.0",
  "description": "The TypeScript utility package designed for solving different problems in dApp development.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "chain": "npx hardhat node",
    "docs": "npx typedoc src/index.ts",
    "benchmark": "ts-node benchmark/multicall.benchmark.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Syndika-Corp/utils-blockchain.git"
  },
  "license": "MIT",
  "contributors": [
    {
      "name": "Mihail Ceban",
      "email": "mihail.ceban@syndika.co",
      "url": "https://github.com/apm1001"
    },
    {
      "name": "Maxim Cojocari-Goncear",
      "email": "maxim.cojocari-goncear@syndika.co",
      "url": "https://github.com/MaxCojocari"
    }
  ],
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "web3",
    "blockchain",
    "typescript",
    "utils",
    "multicall",
    "library"
  ],
  "bugs": {
    "url": "https://github.com/Syndika-Corp/utils-blockchain/issues"
  },
  "homepage": "https://github.com/Syndika-Corp/utils-blockchain#readme",
  "devDependencies": {
    "@1inch/multicall": "^1.0.8",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethers": "^6.6.0",
    "hardhat": "^2.16.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.2.1",
    "semantic-release": "^21.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.24.7",
    "typescript": "^4.6.4",
    "web3": "1.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
